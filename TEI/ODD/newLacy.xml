   <div>
    <head>Full formal specifications</head>
    <p>The encoding scheme defined by this document is a TEI-conformant customization, from
     which user documentation, and formal RELAXNG or DTD specifications can be generated
     automatically. </p>
    <p> This section contains the full schema specification from which formal schemas may be
     are subsequently derived. It must be converted using (for example) teitorelaxng. </p>
    
    
    
<schemaSpec ident="newlacy" start="TEI">

 <!-- (1) which modules and which elements from those modules ? -->
 
 <moduleRef key="tei"/>
     <moduleRef key="core"
      include="p foreign emph hi name date ptr ref list item label head note pb  series author respStmt resp title publisher bibl l lg sp speaker stage sic corr quote"/>
    <!-- include="author bibl choice corr orig date emph foreign gap head hi item l label lg list measure
            milestone name note p pb publisher pubPlace quote ref resp respStmt rs sp stage hi teiCorpus term title "/>
   -->  
     <moduleRef key="textstructure" 
     include="TEI text body div trailer byline titlePage docTitle titlePart docAuthor docImprint docDate epigraph signed front back"/>
     <!--include="TEI text div body front back trailer"/>-->
     <moduleRef key="header"
      include="teiHeader fileDesc titleStmt publicationStmt distributor sourceDesc encodingDesc revisionDesc change idno"/>
     <!--include="availability change  distributor encodingDesc
                   extent fileDesc idno keywords langUsage language licence
            profileDesc publicationStmt revisionDesc sourceDesc teiHeader textClass titleStmt"/>-->
 <moduleRef key="drama"
  include="set performance castGroup castList castItem role roleDesc actor spGrp sound"/>
 
     <!-- CO: included availability and licence -->
    <!-- <moduleRef key="corpus" include="textDesc"/>
  --> <!--  <moduleRef key="analysis" include="s w pc span spanGrp"/>-->
   
     
     
 <!-- (2) Class modifications to reduce attribute clutter -->
     
     <!-- first remove classes which provide attributes we dont want -->
     <classSpec ident="att.ascribed" type="atts" mode="delete"/>
     <classSpec ident="att.breaking" type="atts" mode="delete"/>
     <classSpec ident="att.cReferencing" type="atts" mode="delete"/>
