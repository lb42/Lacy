<TEI xmlns="http://www.tei-c.org/ns/1.0" xml:lang="en" xmlns:lb="http://lb42.github.io">
 <teiHeader>
  <fileDesc>
   <titleStmt>
    <title>entryODD </title>
    <author>Lou Burnard</author>
   </titleStmt>
   <publicationStmt>
    <p>Unpublished draft</p>
