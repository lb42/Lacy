<TEI xmlns="http://www.tei-c.org/ns/1.0" xml:lang="en"
 xmlns:lb="http://lb42.github.io">
  <teiHeader>
      <fileDesc>
         <titleStmt>
            <title><!-- name of markup language being defined goes here --></title>
            <author><!-- primary author --></author>
            <editor><!-- editor or secondary author --></editor>
         </titleStmt>
         <publicationStmt><p>Unpublished draft</p>
        <!-- put <publisher>, <distributor>, or <authority> here -->
        <!-- put <availability> and other optional details about-->
        <!-- the publisher, distributor, or release authority here -->
      </publicationStmt>
         <sourceDesc>
            <p>born digital</p>
         </sourceDesc>
      </fileDesc>
  </teiHeader>
  <text>
      <body>
         <head><!-- name of markup language being defined can be repeated here --></head>
         <p><!-- prose description of, and explanation of, markup language goes here;
              you can use any TEI constructs you like, including multiple paragarphs,
              tables, nested divisions, etc. Furthermore, <specGrp> elements may
              be used to include snippets of schema definitions, and <specList>
              can be used to include to insert a list of descriptions of elements
              and attributes. --></p>
       <!--
-->
       <schemaSpec ident="nicoll" start="doc" ns="http://lb42.github.io">     <!-- @ident is required -->
            <desc>ODD for Nicoll Handlist entries</desc>
           <elementSpec ident="doc" >
            <desc>Arbitrary root element</desc>
           <content><elementRef key="entry" minOccurs="1" maxOccurs="unbounded"/></content>
           </elementSpec>
          <elementSpec ident="entry">
           <desc>An entry in the Handlist</desc>
           <content>
            <sequence>
             <elementRef key="class" minOccurs="0" maxOccurs="1"/>
             <elementRef key="author" minOccurs="0" maxOccurs="unbounded"/>
             <elementRef key="title" minOccurs="0" maxOccurs="unbounded"/>
             <elementRef key="perf" minOccurs="0"/>
             <elementRef key="lic"  minOccurs="0"/>
             <elementRef key="bib"  minOccurs="0"/>
             <elementRef key="note" minOccurs="0"  maxOccurs="unbounded"/>
             <elementRef key="ref" minOccurs="0"  maxOccurs="unbounded"/>
             
            </sequence>
           </content>
           <attList>
            <attDef ident="when">
             <desc>Earliest date associated with this item </desc>
             <datatype><dataRef name="token"/></datatype>
            </attDef>
            <attDef ident="xml:id">
             <desc>Unique identifier for this entry, comprising letter N and a 4 digit number derived from original sequence</desc>
             <datatype><dataRef name="ID"/></datatype>
            </attDef>
             <attDef ident="eType">
              <desc>Indicates type of entry</desc>
             <valList type="closed">
              <valItem ident="plain"><desc>A plain entry documenting a dramatic event, with a single author label</desc></valItem>
             <valItem ident="ref"><desc>An entry duplicating (wholly or partly) information about a dramatic event, referencing another entry</desc></valItem>
              <valItem ident="multi"><desc>An entry duplicating (wholly or partly) information about a dramatic event with multiple authors</desc></valItem>
              <valItem ident="note"><desc>An entry containing a note or comment</desc></valItem></valList>
           
             </attDef><attDef ident="n">
              <datatype><dataRef name="string"/></datatype>
             </attDef>
            <attDef ident="matches">
             <desc>Lacy ID for this item</desc>
             <datatype><dataRef name="Name"/></datatype>
            </attDef>
           </attList>         
          </elementSpec>
        <elementSpec ident="class">
         <desc>Nicoll's classification code for this dramatic event</desc>
         <content><textNode/></content>
         <attList><attDef ident="group"><desc>group to which this classification belongs</desc>
         <valList type="closed">
          <valItem ident="BALLET"><desc></desc></valItem>
          <valItem ident="BURLESQUE"><desc></desc></valItem>
          <valItem ident="BURLETTA"><desc></desc></valItem>
          <valItem ident="COMEDIETTA"><desc></desc></valItem>
          <valItem ident="COMEDY"><desc></desc></valItem>
          <valItem ident="DRAMA"><desc></desc></valItem>
          <valItem ident="FARCE"><desc></desc></valItem>
          <valItem ident="MELODRAMA"><desc></desc></valItem>
          <valItem ident="MUSICAL"><desc></desc></valItem>
          <valItem ident="OPERA"><desc></desc></valItem>
          <valItem ident="PANTO"><desc></desc></valItem>
          <valItem ident="SPECTACLE"><desc></desc></valItem>
          <valItem ident="TRAGEDY"><desc></desc></valItem>
          <valItem ident="UNC"><desc></desc></valItem>
          <valItem ident="â€”"><desc>Value missing from taxonomy</desc></valItem>
          <valItem ident="_"><desc>Value missing from taxonomy</desc></valItem>
         </valList></attDef></attList>
        </elementSpec>
        <elementSpec ident="author">
         <desc>Canonical form of author's name used as heading by Nicoll</desc>
         <content><textNode/></content>
         <attList>
          <attDef ident="origin"><desc>author origin</desc>
          <valList>
           <valItem ident="US"><desc>American author</desc></valItem>
          </valList></attDef>
        <attDef ident="resp">
        <desc>source for this attribution</desc>
        <valList>
         <valItem ident="LB"/>
         <valItem ident="VPP"/>
         <valItem ident="nicoll"/>
        </valList></attDef> </attList>
        </elementSpec>
        <elementSpec ident="title">
         <desc>Canonical form of author's name used as heading by Nicoll</desc>
         <content><textNode/></content>
        </elementSpec>
        <elementSpec ident="perf">
         <desc>Data concerning one or more performances</desc>
         <content><textNode/></content>
        </elementSpec>
        <elementSpec ident="lic">
         <desc>Data concerning one or more licences</desc>
         <content><textNode/></content>
        </elementSpec>
        <elementSpec ident="bib">
         <desc>Data concerning one or more publications</desc>
         <content><alternate minOccurs="0" maxOccurs="unbounded"><textNode/><elementRef key="title"/></alternate></content>
        </elementSpec>
        <elementSpec ident="note">
         <desc>Additional comments of any kind</desc>
         <content><textNode/></content>
         <attList>
          <attDef ident="type">
           <desc>categorizes the topic of the note</desc>
           <valList>
            <valItem ident="music"><desc/></valItem>
            <valItem ident="auth"><desc/></valItem>
            </valList>
          </attDef>
         </attList>
        </elementSpec><elementSpec ident="ref"><desc>Cross reference text</desc>      <content><textNode/></content>
        </elementSpec>
        
        <dataSpec ident="vicDate">
         <desc>Normalised form for Victorian dates</desc>
         <content>
          <sequence><dataRef name="gDay"/>
          <dataRef name="gMonth"/>
          <dataRef name="gYear"/></sequence>
         </content>
        </dataSpec>
         </schemaSpec>
      </body>
  </text>
</TEI>
